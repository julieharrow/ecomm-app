<h1>Our Inventory</h1>

<div class="table-responsive">
  <table class="table table-bordered">
    <tr>
      <th> Name </th>
      <th> Stock </th>
      <th> Description </th>
      <th> Price </th>
    </tr>
    <% @products.each do |product| %>
      <tr>
        <td>  <%= link_to product.name, product_path(product) %>  </td>
        <td>  <%= product.stock %>  </td>
        <td>  <%= product.description %>  </td>
        <td>  <%= product.price %>  </td>
      </tr>
    <% end %>
  </table>
</div>
